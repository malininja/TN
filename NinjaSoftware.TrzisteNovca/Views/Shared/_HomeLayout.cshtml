@using NinjaSoftware.TrzisteNovca.CoolJ.DatabaseGeneric.BusinessLogic
@using NinjaSoftware.TrzisteNovca.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Tržište Novca</title>@*<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />*@
    <link href='http://fonts.googleapis.com/css?family=Noticia+Text' rel='stylesheet'
        type='text/css'>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/globalize")
    @Scripts.Render("~/bundles/custom")
    <script type="text/javascript" src="../../Scripts/superfish.js"></script>
    <script src="../../Scripts/hoverIntent.js" type="text/javascript"></script>
    <link rel="stylesheet" href="../../Content/superfish.css" media="screen" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("ul.sf-menu").superfish();

            $("div.print").click(function () {
                var params = {};
                params["printPage"] = "true";
                ninjaSoftware.url.setParameters(params, true);
            });
        });
    </script>
</head>
<body>
    <div id="header">
        <div class="wrapper-top">
            <div style="float: left;">
                @Html.ActionLink("Početna", "Index", null, new { id = "logo" })
            </div>
            <div style="float: right;">
                @if (Helper.IsBackofficeMenu(ViewContext))
                {
                    @Html.Partial("_BackofficeMenuUp")
                }
                else
                {
                    @Html.Partial("_HomeMenuUp")
                }
            </div>
        </div>
    </div>
    <div id="navigation">
        <div class="wrapper-navi">
        <div class="main-navi-c">
         @if (Helper.IsBackofficeMenu(ViewContext))
            {
                @Html.Partial("_BackofficeMenuMiddle")
            }
            else
            {
                @Html.Partial("_HomeMenuMiddle")
            }
        </div>
            <div class="main-navi-l"></div>
            <div class="main-navi-r"></div>
        </div>
    </div>
    <div id="content" class="wrapper">
        @RenderBody()
        <div id="content-info">
            <div class="container_12">
                <div class="grid_12">
                    <div class="grid_9 alpha">
                        <div class="grid_12">
                            <div class="grid_5 alpha">
                                <div class="info-box">
                                    <div class="title">
                                        Kontakt</div>
                                    <div class="content">
                                        Tržište novca i<br />
                                        kratkoročnih vrijednosnica d.d.
                                        <br />
                                        <br />
                                        Heinzelova 62a/III kat<br />
                                        10000 Zagreb, Hrvatska
                                    </div>
                                </div>
                            </div>
                            <div class="grid_7 omega">
                                <div class="contact">
                                    <img src="@Url.Content("~/Content/layout/tel.png")" style="margin-top:70px;margin-right:20px;" alt=""/>+
                                    385 1 6009 870<br />
                                    <img src="@Url.Content("~/Content/layout/mail.png")" style="margin-top:25px;margin-right:20px;" alt=""/>info@trzistenovca.hr
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="grid_3 omega">
                        <img src="@Url.Content("~/Content/layout/pismo_slika_bez_sjene.png")" style="float:right;margin-right:40px;margin-top:20px;" alt=""/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
        <div class="wrapper">
            <div class="container_12">
                <div class="grid_12">
                    <div class="grid_2">
                        <img src="@Url.Content("~/Content/layout/logo_footer.png")" style="margin-left:40px;" alt="" />
                    </div>
                    <div class="grid_10">
                        <ul id="bottom-nav">
                            <li>@Html.ActionLink("Početna", "Index")</li>
                            <li>@Html.ActionLink("Sudionici", "SudionikGrupaList")</li>
                            <li>@Html.ActionLink("Konferencije", "KonferencijaList")</li>
                            <li>@Html.ActionLink("Korisne adrese", "SudionikList", new { sudionikGrupaId = (long)SudionikGrupaEnum.KorisneAdrese })</li>
                        </ul>
                    </div>
                </div>
                <div class="grid_12">
                <div class="author">
                    MSC &copy; @DateTime.Now.Year
                </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
